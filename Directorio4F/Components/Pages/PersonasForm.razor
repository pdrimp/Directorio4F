    //     {
    //         _persona = new Persona
    //             {
    //                 Id = Id,
    //                 Nombre = $"Nombre de {Id}",
    //                 Correo = $"correo{Id}@ucol",
    //                 Telefono = $"{Id}"
    //             };
    //         _mensaje = "Modificar ";
    //     }
    // }

    private async Task Guardar()
    {
        if (Id > 0)
        {
            await _repositorioPersonas.Update(_persona);
        }
        else
        {
            await _repositorioPersonas.Add(_persona);
        }
        _navigationManager.NavigateTo("/personas");
    }

}
