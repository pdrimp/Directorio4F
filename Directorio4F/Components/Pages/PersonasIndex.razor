    private void Editar(Persona persona)
    {
        _navigationManager.NavigateTo($"/personas/editar/{persona.Id}");
    }

    private async Task Eliminar(Persona persona)
    {
        await _repositorioPersonas.Delete(persona.Id);
        _personas = await _repositorioPersonas.GetAll();
    }

}
